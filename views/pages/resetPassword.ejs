<%- include('../partials/header') %>

<main>
    <h2 class='text-center'>Defina sua nova senha</h2>
    <div id='forgot-pass'>
        <form action='/forgot?_method=PUT' method="POST" class="mt-4 form-access" id='form-forgot'>

            <div class="form-group">
                <ul style='list-style: none;padding: 0;' id='erros0'></ul>
                <input type="password" required
                title='Digite seu email' name='newPass' class="form-control" id="exampleInputNewPass" aria-describedby="passlHelp" placeholder="nova senha">
                <ul style='list-style: none;padding: 0;' id='erros1'></ul>
              </div>
              <div class="form-group">
                <ul style='list-style: none;padding: 0;' id='erros0'></ul>
                <input type="password" required
                title='Digite seu email' name='confPass' class="form-control" id="exampleInputConfNewPass" aria-describedby="passHelp" placeholder="confirme sua nova senha">
                <ul style='list-style: none;padding: 0;' id='erros1'></ul>
              </div>
            <button type="submit" class="btn btn-success col-md-12" id='sendMail'>Enviar</button>
            
          </form>
    </div>
</main>

<%- include('../partials/scripts') %>