<%- include('../partials/header') %>

<main>
    <div id='forgot-pass'>
      <div id='loading'>
        <div class="loading"><img src="/images/svg/refresh.svg" alt=""></div>
        <h2 class='text-center' id='title'>Digite seu e-mail cadastrado</h2>
      </div>
        <form action='/password/forgot?_method=PATCH' method="POST" class="form-access" id='form-forgot'>
            <div class="form-group">
              <ul style='list-style: none;padding: 0;' id='erros0'></ul>
              <div class='input-user-email'>
              <input type="email" autofocus required
              title='Digite seu email' name='email' class="form-control" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="e-mail">
              <img src="/images/svg/user-email.svg" alt="" id='user-email'>
            </div>
              <ul style='list-style: none;padding: 0;' id='erros1'></ul>
            </div>
            <button type="submit" class="btn btn-success col-md-12" id='sendMail'>Enviar</button>
            
          </form>
    </div>
</main>


<script src="/js/forgotPassword.js"></script>
<%- include('../partials/scripts') %>

</body>
</html>